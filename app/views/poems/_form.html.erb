<%= form_for @poem do |f| %>
    <% if @poem.errors.any? %>
        <div id="errors">
          <h2><%= pluralize(@poem.errors.count, "error") %> prevented this post from saving:</h2>
          <ul>
            <% @poem.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, rows: 3, cols: 100 %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>